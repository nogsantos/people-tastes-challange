{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jest": true
	},
	"extends": "react-app",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": ["error", "single"],
        "no-unused-vars": "warn",
        "no-useless-escape": "off",
		"no-undef": "warn",
		"semi": ["error", "always"],
		"no-console": ["error", { "allow": ["warn", "error", "log"] }]
	},
	"plugins": ["import"]
}
